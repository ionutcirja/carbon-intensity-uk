{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@app/*": ["./src/app/*"],
      "@routes": ["./src/routes"],
      "@features/*": ["./src/features/*"],
      "@store": ["./src/store"],
      "@reducers": ["./src/reducers"],
      "@sagas": ["./src/sagas"],
      "@style": ["./src/style"],
      "@style/*": ["./src/style/*"]
    }
  },
  "include": [
    "global.d.ts",
    "src"
  ]
}
